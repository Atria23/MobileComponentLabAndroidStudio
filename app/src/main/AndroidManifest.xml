<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.informatika.mobilecomponentdanu">

    <!-- Izin untuk menampilkan notifikasi (penting untuk Android 13+) -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <!-- Izin untuk menjadwalkan alarm eksak (penting untuk menjadwalkan alarm di masa depan) -->
    <uses-permission android:name="android.permission.SCHEDULE_EXACT_ALARM" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MobileComponentLabMuvausa">

        <!-- MainActivity - Activity utama yang akan diluncurkan -->
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Activity untuk Shared Preferences -->
        <activity android:name=".sharedprefs.SharedPrefsActivity" />

        <!-- Receiver untuk Alarm -->
        <receiver android:name=".alarm.AlarmReceiver" />
        <activity
            android:name=".alarm.AlarmActivity"
            android:exported="false" />

        <!-- Activity untuk RecyclerView -->
        <activity android:name=".recyclerview.RecyclerViewActivity" />

        <!-- Activity untuk Room Database -->
        <activity android:name=".roomdb.RoomActivity" />

    </application>

</manifest>